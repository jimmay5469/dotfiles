end)

hs.hotkey.bind({"cmd", "alt", "ctrl"}, "i", function()
  move(hs.window.focusedWindow(), "TOP", "RIGHT")
end)

hs.hotkey.bind({"cmd", "alt", "ctrl"}, "h", function()
