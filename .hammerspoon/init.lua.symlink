hs.hotkey.bind({"cmd", "alt", "ctrl"}, "f", function()
  local win = hs.window.focusedWindow()
  local f = win:frame()
  local screen = win:screen()
  local max = screen:frame()

  f.w = max.w - 150
  f.h = max.h - 75

  win:setFrame(f)

  move(win, "CENTER", "CENTER")
end)
